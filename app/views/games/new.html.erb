<h1>Let's play "Des chiffres et des lettres"</h1>

<ul class="grid">
  <% @letters.each do |letter| %>
  <li class="letter"> <%=letter%></li>
  <% end %>
</ul>


<h2>What is the longest word you can find ?</h2>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type= 'hidden'  value="<%= @letters %>" name="letters">
  <input type="text" class="form-control w-50 inline-block" name="userword" placeholder="What is your longest word ?">
  <input type="submit" value="My score !" class="btn btn-primary mb-2 inline-block">
</form>



